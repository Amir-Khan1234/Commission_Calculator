<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Preferred_method_of_contact__c, &apos;Phone&apos;), ISBLANK( Phone ))</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>This is Required</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Email_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Preferred_method_of_contact__c, &apos;Email&apos;), ISBLANK( Email ))</errorConditionFormula>
    <errorDisplayField>Email</errorDisplayField>
    <errorMessage>This is Required</errorMessage>
</ValidationRule>
